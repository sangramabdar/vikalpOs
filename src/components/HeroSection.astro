---
import Wrapper from "../layouts/Wrapper.astro";
import { cn } from "../utils/cn";
import Button from "./common/Button.astro";

interface ButtonProps {
  link?: string;
  text?: string;
}

export interface Props {
  headers: string[];
  description: string;
  hideButton?: boolean;
  buttonProps?: ButtonProps;
  link?: string;
  buttonText?: string;
  className?: string;
}

const {
  headers,
  description,
  hideButton = false,
  buttonProps = {},
  className = "",
} = Astro.props as Props;

const { link = "/contact-us", text = "Reach Us" } = buttonProps;
---

<section class={cn("bg-background-tertiary pt-1")}>
  <Wrapper className="lg:p-14">
    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-10 place-start justify-items-start"
    >
      <div class="flex flex-col space-y-3 h-fit slideInRight">
        <h1
          class="font-bold text-typography-100 text-xl md:text-2xl lg:text-4xl"
        >
          {
            headers.map((header, index) => (
              <span
                class={
                  index % 2 == 0 ? "text-typography-100" : "text-primary-70"
                }
              >
                {header}
              </span>
            ))
          }
        </h1>
        <p
          class="text-typography-80 text-left w-full md:text-lg self-center md:self-start"
        >
          {description}
        </p>

        {
          !hideButton && (
            <div class="pt-4 md:pt-6">
              <Button link={link} text={text} />
            </div>
          )
        }
      </div>

      <slot />
    </div>
  </Wrapper>
</section>
