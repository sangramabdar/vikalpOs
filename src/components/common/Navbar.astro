<script>
  const allMenus = document.getElementsByClassName("menu");
  const allMenuItems = document.getElementsByClassName("menuItem");
  const allMenuIds = ["productMenu", "featuresMenu", "pricingMenu"];
  const backHomes = document.getElementsByClassName("backHome");
  const mainMenu = document.getElementById("mainMenu");
  const menuBtn = document.querySelector(".menu-btn");
  let mainMenuOpen = false;

  const navBar = document.querySelector(".navBar");
  const logo = document.getElementById("logo") as HTMLImageElement;

  const darkLogo =
    "https://res.cloudinary.com/senpiper/image/upload/v1741795719/senpiper_assets/new_website_assets/Senpiper_Logo_Light_BG_New_qoxfoh.svg";
  const lightLogo =
    "https://res.cloudinary.com/senpiper/image/upload/v1740681698/senpiper_assets/new_website_assets/Senpiper_Logo_Dark_BG_1_iolzu9.svg";

  const darkBg = "bg-violet";
  const lightBg = "bg-white";

  const mainMenuClick = required => {
    for (let i = 0, all = allMenus.length; i < all; i++) {
      allMenus[i].classList.add("hidden");
    }
    const requiredMenu = document.getElementById(required);
    requiredMenu.classList.remove("hidden");
  };

  const toggleMenu = () => {
    if (mainMenuOpen) {
      mainMenu.classList.add("hidden");
      menuBtn.classList.remove("open");
      navBar.classList.remove(lightBg);
      navBar.classList.add(darkBg);
      logo.src = lightLogo;
    } else {
      mainMenu.classList.remove("hidden");
      menuBtn.classList.add("open");
      navBar.classList.remove(darkBg);
      navBar.classList.add(lightBg);
      logo.src = darkLogo;
    }
    mainMenuOpen = !mainMenuOpen;
  };

  menuBtn.addEventListener("click", toggleMenu);

  for (let i = 0, all = allMenuItems.length; i < all; i++) {
    allMenuItems[i].addEventListener("click", () =>
      mainMenuClick(allMenuIds[i])
    );
  }

  for (let i = 0, all = backHomes.length; i < all; i++) {
    backHomes[i].addEventListener("click", () => mainMenuClick("homeMenu"));
  }
</script>
