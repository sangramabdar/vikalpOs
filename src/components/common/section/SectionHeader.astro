---
export interface Props {
  headers: Array<string>;
  description: string;
}

const { headers, description } = Astro.props;
---

<div class="flex flex-col justify-center items-center">
  <h1
    class="text-xl md:text-2xl xl:text-4xl text-center max-w-2xl font-bold text-primary-70 slideInUp"
  >
    {
      headers.map((header, index) => (
        <span class={index == 0 ? "text-typography-80" : "text-primary-70"}>
          {header}
        </span>
      ))
    }
  </h1>
  <p
    class="text-typography-80 text-base md:text-lg text-center max-w-4xl mt-5 slideInUp"
  >
    {description}
  </p>
</div>
