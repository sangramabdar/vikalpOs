---
export interface Props {
  text?: string;
  link?: string;
  color?: Array<string>;
  className?: string;
}

const {
  text = "Reach us",
  link = "/contact/",
  color = ["bg-white", "text-blue-grey"],
  className = "",
} = Astro.props as Props;
---

<button
  class={`bg-primary-80 h-fit text-white px-4 py-2 rounded-sm font-semibold md:text-lg ${className}`}
  >{text}</button
>
