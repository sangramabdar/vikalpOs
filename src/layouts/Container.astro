---
import SectionContainer from "../components/common/section/SectionContainer.astro";
import SectionHeader from "../components/common/section/SectionHeader.astro";
import Wrapper from "../layouts/Wrapper.astro";

export interface Props {
  headers?: string[];
  description?: string;
  className?: string;
}

const { headers = [], description = "", className = "" } = Astro.props;
---

<SectionContainer className={`${className}`}>
  <Wrapper
    className="flex flex-col justify-center items-center gap-11 lg:gap-20"
  >
    <SectionHeader headers={headers} description={description} />
    <slot />
  </Wrapper>
</SectionContainer>
