---

<Layout>
  <Wrapper>
    {
      onGroundOutComesSectionData.cards.map((card, index) => (
        <div class="min-w-full  p-4 px-8 lg:px-4 box-border" id={index}>
          <div class="bg-background-tertiary h-full rounded-md p-4 space-y-8">
            <div class="bg-background-primary w-full h-32 flex justify-center items-center px-2 py-4">
              <img src={card.img} class="w-fit h-full object-cover" />
            </div>
            <h2 />
            <p class="text-center">{card.description}</p>
          </div>
        </div>
      ))
    }
  </Wrapper>
</Layout>

