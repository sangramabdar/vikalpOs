    const elementToScroll = window.location.hash.slice(1);

    console.log("sangram", { elementToScroll });
    const target = document.getElementById(elementToScroll);
    const offset = 20000; // pixels from top after scroll
    if (target) {
      // First scroll element into view
      target.scrollIntoView({ behavior: "smooth", block: "center" });
      // Then adjust by offset after animation frame
      requestAnimationFrame(() => {
        window.scrollTo({ top: -offset, behavior: "smooth" });
      });
    }
  });
</script>
