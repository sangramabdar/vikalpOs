---
import Button from "../components/common/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section
    class="h-100 flex flex-col items-center justify-center text-center px-4"
  >
    <h1 class="text-5xl font-bold mb-4 text-typography-100">
      404 - Page Not Found
    </h1>
    <p class="text-lg mb-6 text-typography-70">
      Sorry, the page you are looking for does not exist.
    </p>
    <Button link="/" text="Go Home" variant="secondary" />
  </section>
</Layout>
