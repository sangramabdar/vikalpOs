---
import Button from "../components/common/Button.astro";
import Layout from "../layouts/Layout.astro";
import Wrapper from "../layouts/Wrapper.astro";
---

<Layout>
  <section
    class="h-[55vh] flex flex-col items-center justify-center text-center"
  >
    <Wrapper>
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-typography-100">
        404 - Page Not Found
      </h1>
      <p class="text-lg mb-6 text-typography-70">
        Sorry, the page you are looking for does not exist.
      </p>
      <div class="flex justify-center">
        <Button link="/" text="Go Home" variant="secondary" />
      </div>
    </Wrapper>
  </section>
</Layout>
