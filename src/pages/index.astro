---

<Layout>
  <section class="bg-background-tertiary pt-20">
    <Wrapper>
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-10 place-start justify-items-start"
      >
        <AnimateOnView animationTouse="slideTop" client:load>
          <div class="flex flex-col space-y-3 h-fit">
            <h1 class="font-bold text-typography-100 text-2xl md:text-4xl">
              Build Digital Systems Fast <span class="text-primary-70"
                >Free from Lock-In.</span
              >
            </h1>
            <p
              class="text-typography-80 text-left w-full md:text-lg self-center md:self-start"
            >
              VikalpOS is a modular low-code platform to create apps, forms,
              workflows, dashboards, and mobile tools without writing code or
              depending on a vendor
            </p>tertiary

            <div class="pt-4 md:pt-6">
              <Button link="/platform" />
            </div>
          </div>
        </AnimateOnView>

        <AnimateOnView animationTouse="slideToRight" client:load
          ><div class="h-fit">
            <img
              src="https://res.cloudinary.com/senpiper/image/upload/v1753764912/senpiper_assets/VikalpOS/Group_1000005383_x97fwz.svg"
              alt="#"
              class="w-fit"
            />
          </div>
        </AnimateOnView>
      </div>
    </Wrapper>
  </section>

  {
    DigitizeTheWaySectionData.map(element => (
      <Container headers={element.headers} description={element.description}>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 pt-5 md:pt-10 xl:pt-[72px] 2xl:pt-[102px]">
          {element.cards.map(card => (
            <AnimateOnView client:load animationTouse="slideBottom">
              <Card card={card} />
            </AnimateOnView>
          ))}
        </div>
      </Container>
    ))
  }

  <SectionContainer className="md:gap-20">
    <Wrapper>
      <SectionHeader
        headers={applicationSectionData.headers}
        description={applicationSectionData.description}
      />
    </Wrapper>
    {
      applicationSectionData.content.map((element, index) => (
        <section
          class={`${index % 2 === 0 ? "bg-background-tertiary" : "bg-background-primary"}`}
        >
          <Wrapper>
            <div class={`grid grid-cols-1 lg:grid-cols-2 mt-20 gap-10`}>
              <img
                src={element.img}
                alt="enterprise_img"
                class={`relative w-full h-full object-contain slideInLeft ${index % 2 == 0 ? "order-1" : ""}`}
              />
              <div class="flex flex-col items-start slideInRight gap-3 md:gap-4">
                <img
                  src={element.icon}
                  alt="enterprise_img"
                  class="w-[48px] h-[48px] relative"
                />
                <h3 class="text-typography-80 font-bold text-left text-xl md:text-3xl">
                  {element.header}
                </h3>
                <ul class="space-y-2 text-left self-start md:text-xl">
                  {element.content.map(value => (
                    <li class="flex gap-2">
                      <img src="https://res.cloudinary.com/senpiper/image/upload/v1753788029/senpiper_assets/VikalpOS/icons/check_circle_en544w.svg" />
                      <span class="text-typography-80 text-base">{value}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </Wrapper>
        </section>
      ))
    }
  </SectionContainer>

  <OverFlowSection sectionData={govermentGradeSectionData} />

  <Container
    headers={AiEnabledSectionData.headers}
    description={AiEnabledSectionData.description}
    className="lg:mt-40"
  >
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-10 pt-5 md:pt-10 xl:pt-[72px] 2xl:pt-[102px]"
    >
      {
        AiEnabledSectionData.cards.map(card => (
          <Card iconAndHeaderSameLine card={card} />
        ))
      }
    </div>
  </Container>

  <Container
    headers={onGroundOutComesSectionData.headers}
    description={onGroundOutComesSectionData.description}
  >
    <div class="w-full mt-20 grid grid-cols-1 md:grid-cols-3 gap-12">
      {
        onGroundOutComesSectionData.cards.map(card => (
          <div class="bg-background-tertiary p-4 space-y-8">
            <div class="bg-background-primary w-full h-25 flex justify-center items-center">
              <img src={card.img} class="w-20" />
            </div>
            <p class="text-center">{card.description}</p>
            <div class="flex justify-center">
              <Button variant="secondary" text="View Case Study" link="/" />
            </div>
          </div>
        ))
      }
    </div>
  </Container>

  <StartAConversionSection />
</Layout>
