      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 justify-center place-items-center gap-12 mt-10 flex-wrap"
      >
        {
          features.map(element => (
            <div class="text-primary-70 font-bold bg-background-tertiary p-4 rounded-lg w-fit slideInLeft">
              {element}
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>

  <StartAConversionSection />
</Layout>
